<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2f3136">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_bar_gradient"
        android:padding="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_input_add"
            app:tint="#ffffff"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ‘¥ Ajouter un membre"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Formulaire -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#40444b"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="#7289da"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Saisissez le nom d'utilisateur ou l'email de la personne Ã  ajouter"
                android:textColor="#b9bbbe"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Champ de saisie -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom d'utilisateur ou Email"
            android:textColor="#dcddde"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/modern_input_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#888888"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/input_user_identifier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ex: alice_martin ou alice@example.com"
                android:textColorHint="#888888"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone" />

        </LinearLayout>

        <!-- Options de rÃ´le (optionnel) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RÃ´le dans le workspace"
            android:textColor="#dcddde"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_role_member"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="ðŸ‘¤ Membre"
                android:textSize="12sp"
                android:backgroundTint="#ff6b35"
                android:textColor="#ffffff"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_role_admin"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="ðŸ‘‘ Admin"
                android:textSize="12sp"
                android:backgroundTint="#40444b"
                android:textColor="#dcddde" />

        </LinearLayout>

    </LinearLayout>

    <!-- Boutons d'action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#40444b"
        android:padding="16dp"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel_add"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Annuler"
            android:textSize="12sp"
            android:backgroundTint="#2f3136"
            android:textColor="#dcddde"
            android:paddingHorizontal="20dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_add_member"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="âž• Ajouter"
            android:textSize="12sp"
            android:backgroundTint="#43b581"
            android:textColor="#ffffff"
            android:paddingHorizontal="20dp" />

    </LinearLayout>

</LinearLayout>