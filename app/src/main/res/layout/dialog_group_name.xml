    <!-- Description -->
    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donnez un nom Ã  votre conversation.\nVous pourrez ensuite ajouter des participants."
