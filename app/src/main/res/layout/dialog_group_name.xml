<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2f3136"
    android:padding="20dp">

    <!-- Titre -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¬ CrÃ©er une conversation"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donnez un nom Ã  votre conversation.\nVous pourrez ensuite ajouter des participants."
        android:textColor="#b9bbbe"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Champ de saisie -->
    <EditText
        android:id="@+id/group_name_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nom de la conversation"
        android:textColor="#dcddde"
        android:textColorHint="#72767d"
        android:background="#40444b"
        android:padding="12dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginBottom="20dp" />

    <!-- Boutons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="10dp">

        <!-- Bouton Annuler -->
        <Button
            android:id="@+id/cancel_group_name_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Annuler"
            android:textColor="#b9bbbe"
            android:textSize="14sp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="12dp"
            android:minWidth="80dp" />

        <!-- Bouton CrÃ©er -->
        <Button
            android:id="@+id/confirm_group_name_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="âœ“ CrÃ©er"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#ff6b35"
            android:minWidth="80dp"
            android:elevation="2dp" />
    </LinearLayout>
</LinearLayout>