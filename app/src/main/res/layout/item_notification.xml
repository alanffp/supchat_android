<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#2f3136"
    android:padding="16dp"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="2dp">

    <!-- Indicateur de notification non lue -->
    <View
        android:id="@+id/unread_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#ff6b35"
        android:layout_marginEnd="16dp"
        android:visibility="visible" />

    <!-- IcÃ´ne de type de notification -->
    <ImageView
        android:id="@+id/icon_notification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_dialog_email"
        android:background="#40444b"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        app:tint="#ff6b35" />

    <!-- Contenu de la notification -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- En-tÃªte avec titre et heure -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Titre/Type de notification -->
            <TextView
                android:id="@+id/title_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Message privÃ©"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Heure de la notification -->
            <TextView
                android:id="@+id/time_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textColor="#72767d"
                android:textSize="12sp"
                android:background="#40444b"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />
        </LinearLayout>

        <!-- Message de la notification -->
        <TextView
            android:id="@+id/message_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vous avez reÃ§u un nouveau message de John Doe"
            android:textColor="#dcddde"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="8dp" />

        <!-- Badges et informations supplÃ©mentaires -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Badge du type -->
            <TextView
                android:id="@+id/notification_type_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬ PRIVÃ‰"
                android:textColor="#4CAF50"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="#40444b"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="8dp" />

            <!-- Espace flexible -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Statut de lecture -->
            <TextView
                android:id="@+id/read_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¬ Non lu"
                android:textColor="#ff6b35"
                android:textSize="10sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bouton actions -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="12dp">

        <!-- Bouton marquer comme lu -->
        <ImageView
            android:id="@+id/mark_as_read_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_view"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="#72767d"
            android:contentDescription="Marquer comme lu"
            android:visibility="visible" />

        <!-- Bouton menu (optionnel) -->
        <ImageView
            android:id="@+id/notification_menu_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_more"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="#72767d"
            android:layout_marginTop="4dp"
            android:contentDescription="Plus d'options"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>