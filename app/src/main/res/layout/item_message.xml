<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/message_container">

    <!-- Info sur la réponse (si c'est une réponse) -->
    <LinearLayout
        android:id="@+id/reply_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="4dp">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#AAAAAA"
            android:layout_gravity="center_vertical"/>
            
        <TextView
            android:id="@+id/reply_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Réponse à @utilisateur"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#AAAAAA"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <!-- Contenu principal du message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Entête du message avec auteur et date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    android:textColor="#AAAAAA" />
            </LinearLayout>

            <!-- Contenu du message -->
            <TextView
                android:id="@+id/messageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Actions de message (éditer, supprimer, réagir, répondre) -->
    <LinearLayout
        android:id="@+id/message_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Modifier" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Supprimer" />

        <ImageButton
            android:id="@+id/btn_react"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Réagir" />

        <ImageButton
            android:id="@+id/btn_reply"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Répondre" />
    </LinearLayout>

    <!-- Conteneur pour les réactions -->
    <LinearLayout
        android:id="@+id/reactions_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

    <!-- Section pour les réponses -->
    <LinearLayout
        android:id="@+id/replies_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_menu_view"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/replies_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Voir les réponses (0)"
            android:textColor="#3F51B5"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>