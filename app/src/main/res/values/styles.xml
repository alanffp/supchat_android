<!-- res/values/styles.xml -->
<resources>
    <!-- Thème de base -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Attributs communs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Thème clair (blanc) -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- Autres couleurs pour le mode clair -->
    </style>

    <!-- Thème foncé (gris foncé) -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/darkGray</item>
        <item name="backgroundColor">@color/darkGray</item>
        <item name="android:textColor">@color/white</item>
        <!-- Autres couleurs pour le mode sombre -->
    </style>
    <style name="ModernTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="android:textColorHint">#80ffffff</item>
        <item name="hintTextColor">#ff6b35</item>
        <item name="boxStrokeColor">#ff6b35</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
    <style name="ModernDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>
</resources>